{
  "name": "gortex-cli",
  "version": "3.0.1",
  "description": "CLI interactif avec interface à onglets et IA intégrée : workflow Git complet avec génération intelligente de commits conventionnels",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gortex": "dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage"
  },
  "keywords": [
    "git",
    "commit",
    "conventional-commits",
    "cli",
    "changelog",
    "git-hooks",
    "commit-message",
    "semantic-versioning",
    "developer-tools"
  ],
  "author": "Arthur Jean",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArthurDEV44/gortex-cli.git"
  },
  "bugs": {
    "url": "https://github.com/ArthurDEV44/gortex-cli/issues"
  },
  "homepage": "https://github.com/ArthurDEV44/gortex-cli#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    ".gortexrc.example"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "commander": "^11.1.0",
    "cosmiconfig": "^9.0.0",
    "figlet": "^1.9.4",
    "gradient-string": "^3.0.0",
    "ink": "^6.5.0",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-link": "^5.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.0",
    "simple-git": "^3.21.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^20.10.4",
    "@types/react": "^19.2.6",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "ink-testing-library": "^4.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
